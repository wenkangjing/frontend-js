@import "whitespace-reset.css"
@import "mixins"

basics()

#board
  user-select: none
  white-space: nowrap
  margin-bottom: 10px
  overflow-x: auto
  //overflow-y: hidden
  padding-bottom: 10px
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0

#lists
  margin: 10px
  width: 100%
  height: 100%

.list
  display: inline-block
  width: 270px
  height: 100%
  border: 1px solid gray
  vertical-align: top
  + .list
    margin-left: 10px


.card
  background: gray