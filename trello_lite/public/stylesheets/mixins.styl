colors = {
  benchmark: #026AA7,
  dark: #0067A3,//rgba(0,0,0,.15),
  light: #0079BF, //rgba(0,0,0,0.3),
  headerText: #C4C9CC,
  boardText: #4d4d4d,
  list:  #E2E4E6,
  listText: #4d4d4d,
  card: #fff,
  cardText: #4d4d4d,
  cardHover: #EDEFF0
}

basics()
  /* box-sizing reset */
  html
    box-sizing: border-box
  *
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    box-sizing: border-box

  *, *:before, *:after
    -webkit-box-sizing: inherit
    -moz-box-sizing: inherit
    box-sizing: inherit

  /* native implementationi reset */
  textarea, input, button, select 
    font-family: inherit
    font-size: inherit

  /* clearfix */
  .clearfix::after
    content: ""
    display: block
    visibility: hidden
    clear: both

  html
    color: #4d4d4d
    font: 14px "Helvetica Neue",Arial,Helvetica,sans-serif
    line-height: 18px
    background: colors.benchmark

  a
    text-decoration: none
    &:active,
    &:hover
      outline: 0

  hr
    background: #D6DADC
    border: 0
    color: #D6DADC
    height: 1px
    margin: 5pt 0
    width: 100%

  .float-right
    float: right

  .overlay
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: rgba(0,0,0,.6)
    z-index: 20
  .text-underline
    text-decoration: underline
  .section-divider
    margin: 15px 0    

  textarea
    padding: 9px 11px
    border-radius: 3px
    resize: none
    transition: background 85ms ease-in,border-color 85ms ease-in

  input[type="submit"]
    outline: 0
    border: 0
    background: linear-gradient(to bottom,#61BD4F 0,#5AAC44 100%)
    box-shadow: 0 1px 0 #3F6F21
    color: #fff
    &:hover
      background: linear-gradient(#5AAC44 0%, #519839 100%)
  input[type="reset"]
    outline: 0
    border: 0
    color: #B04632
    &:hover
      color: #fff
      background: linear-gradient(to bottom,#CF513D 0,#B04632 100%)
  li
    list-style: none

//
// common styles
//

.header-btn
  display: inline-block
  height: 30px
  width: 30px
  text-align: center
  border-radius: 3px
  margin-right: 8px
  background-color: colors.light
  vertical-align: top

.header-btn:hover
  cursor: pointer
  color: #fff
  background: linear-gradient(to bottom,rgba(255,255,255,.4) 0,rgba(255,255,255,.3) 100%)

.user-initials, .user-initials-sm
  display: inline-block
  height: 30px
  width: 30px
  text-align: center
  border-radius: 3px
  margin-right: 8px
  background-color: #CDD2D4
  vertical-align: top
.user-initials-sm
  width: 24px
  height: 24px

.user-initials:before, .user-initials-sm:before
  content: "K"
  color: #4d4d4d
  font-size: 16px
  height: 30px
  line-height: 30px
.user-initials-sm:before
  height: 24px
  line-height: 24px

.header-brand
  display: inline-block
  height: 30px
  width: 80px
  margin: 0 auto
  background-image: url("/images/header-logo.png")
  background-color: transparent

.dark-hover:hover
  background: #CDD2D4

.badge-text
  font-size: 9pt
  padding: 0 2px
  white-space: nowrap

.description-input,
.comment-input
  background: 0 0
  width: 100%
  height: 75px
  margin: 0
  min-height: 75px
  border: 0
  background: #fff
  &:focus,
  &:active
    outline: 0
    box-shadow: none

.description-input
  background: rgba(0,0,0,.03)
  border-color: rgba(0,0,0,.15)
  box-shadow: inset 0 1px 6px rgba(0,0,0,.1)
  margin-bottom: 4px

.card-modal-btn
  display: inline-block
  color: #fff
  line-height: 22px
  font-weight: 700
  text-align: center
  padding: 7px 20px
  margin: 8px 4px 8px 0
  border-radius: 3px
  cursor: pointer

.card-modal-label
  display: inline-block
  color: #fff
  height: 30px
  min-width: 45px
  line-height: 22px
  font-weight: 700
  text-align: center
  padding: 4px 10px
  margin: 0px 4px 4px 0
  border-radius: 3px
  cursor: pointer
  vertical-align: top
  &:hover
    opacity: 0.8

.card-modal-add-label
  display: inline-block
  color: #8c8c8c
  border-radius: 3px
  background: #E2E4E6
  vertical-align: top
  cursor: pointer
  &:hover
    background: #D6DADC
    border-radius: 3px

.pop-over
  position: absolute
  width: 300px
  background: #fff
  border-radius: 3px
  border: 1px solid #D6DADC
  border-bottom-color: #C4C9CC
  box-shadow: 0 1px 6px rgba(0,0,0,.15)
  overflow: hidden
  z-index: 70
  h2
    font-size: 14px
    margin-bottom: 8px
  .pop-over-header
    height: 36px
    margin-bottom: 8px
    text-align: center
  .pop-over-header-title
    color: #8c8c8c
    display: block
    line-height: 36px
    border-bottom: 1px solid #D6DADC
    margin: 0 10px
  .pop-over-header-back-btn
    position: absolute;
    top: 0;
    left: 0;
    width: 36px
    height: 36px
    line-height: 36px
    color: #4d4d4d
    z-index: 2
  .pop-over-header-close-btn
    position: absolute;
    top: 0;
    right: 0;
    width: 36px
    height: 36px
    line-height: 36px
    color: #4d4d4d
    z-index: 2
  .pop-over-content
    padding: 0 10px 10px


.label-sm
  float: left
  color: #fff
  height: 8px
  padding: 3px 6px
  margin: 0 3px 3px 0 
  width: 42px
  max-width: 100%
  border-radius: 3px
  text-overflow: ellipsis
.badge
  display: inline-block
  max-width: 100%
  color: #8c8c8c
  padding: 1px 2px
  margin: 0 4px 4px 0
  overflow: hidden
  text-decoration: none
  text-overflow: ellipsis
  vertical-align: top
.badge.past
  border-radius: 3px
  background-color: #EC9488
  span
    color: #fff
.badge.completed
  background-color: #5AAC44
  border-radius: 3px
  span
    color: #fff
