@import "whitespace-reset.css"
@import "mixins"

/* box-sizing reset */
*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

*, *:before, *:after
  -webkit-box-sizing: inherit
  -moz-box-sizing: inherit
  box-sizing: inherit

/* native implementationi reset */
textarea, input, button, select 
  font-family: inherit
  font-size: inherit

body
  font: font
  padding: 10px

main
  max-width: 800px
  margin: 0 auto
  clear: both

h1
  margin: 20px 0 10px 0

h2 
  font-size: 1.3em

h3 
  font-size: 1.2em
    
#index
  li
    display: inline-block
    width: 150px
    margin: 0 20px 20px 0
    vertical-align: top
    img 
      display: block
      width: 100%
      margin: 0 10px 10px 0
    div
      width: 100%
      height: 100px

.button
  button() 

.delete
  delete()

form
  dt
    padding: 0 0 5px 0
  dd
    padding: 0 0 20px 0
  input[type="text"],
  input[type="date"],
  input[type="url"],
  input[type="number"]
    width: 100%
    padding: 5px 8px
    border: 1px solid colors.border
    border-radius: 6px

header
  max-width: 800px
  margin: 0 auto

#cart
  position: relative
  float: right
  width: 50%
  z-index: 2
  text-align: right
  label, p, a
    padding: 2px 3px
    cursor: pointer
  label, a
    display: inline-block  
  input
    display: none
    &:checked
      + #items // immediately followed
        display: block
#items
  display: none
  position: absolute
  top: 100%
  right: 0
  padding: 5px
  color: colors.button.fg
  background: colors.button.bg
  li
    text-align: left
    padding: 5px 0
    font-size: 12px
  small
    float: right
    margin-left: 10px
  li:hover
    background: colors.button.hover

#checkout
  border-collapse: collapse
  width: 100%;
  th 
    background-color: colors.button.bg
    color: white
  th, td
    text-align: left
  th:last-child, td:last-child
    text-align: right
  tr:nth-child(even) 
    background-color: #f2f2f2
  img
    width: 50px
